<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
    <div class="container">
        <h1>Create user</h1>
        <form action="/inscription/create" class="form-inscription" method="POST">

            <% if(flash && flash.err) { %>
               <ul class="alert alert-success">
                <% Object.keys(flash.err).forEach(function(error) { %>
                   <li>
                       <%- JSON.stringify(flash.err[error]) %>
                   </li>
                <% }) %>
               </ul>
            <% } %>

            <div class="form-group">
                <label for="exampleInputEmail1">Email</label>
                <input type="email" name="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
            </div>

            <div class="form-group">
                <label for="exampleInputTitle">Titre</label>
                <input type="text" name="title" class="form-control" id="exampleInputTitle" placeholder="titre">
            </div>

            <div class="form-group">
                <label for="exampleInputName">Name</label>
                <input type="text" name="name" minlength="3" class="form-control" id="exampleInputName" placeholder="name">
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" name="password" minlength="3" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1c">Password</label>
                <input type="password" name="passwordConf" minlength="3" class="form-control" id="exampleInputPassword1c" placeholder="Password">
            </div>

            <button type="submit" class="btn btn-default">Submit</button>
            <input type="hidden" name="_csrf" value="<%= _csrf %>">
        </form>
    </div>
</div>